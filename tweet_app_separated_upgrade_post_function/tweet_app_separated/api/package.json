{
  "name": "api",
  "type": "module",
  "scripts": {
    "test:setup": "npm run db:reset:test && npm run db:seed:test",
    "test:typecheck": "tsc --noEmit --skipLibCheck --project tsconfig.json",
    "watch": "tsx watch ./bin/run_server.ts",
    "lint:check": "eslint",
    "lint:fix": "eslint --fix",
    "format:check": "prettier --check '**/*.{js,ts}'",
    "format:fix": "prettier --write '**/*.{js,ts}'",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx src/db/seed/development.ts",
    "db:seed:test": "dotenv -e .env.test -- tsx src/db/seed/test.ts",
    "db:reset:test": "dotenv -e .env.test -- prisma migrate reset --force --skip-seed",
    "start:test": "API_PORT=${API_PORT:-8001} NODE_ENV=test dotenv -e .env.test -- npm run start",
    "start": "tsx ./bin/run_server.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "dotenv-cli": "^8.0.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.9",
    "prisma": "^6.3.1",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.1",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  }
}
